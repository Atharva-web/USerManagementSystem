<% include('../layouts/header.ejs') %>
<title>Create Account</title>
<style>
  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }
  input[type=text] {
  padding: 8px 20px;
  margin: 8px 0;
  box-sizing: border-box;
  border: 1px solid #ccc;
  border-radius: 10px;
  -webkit-transition: 0.5s;
  transition: 0.2s;
  outline: none;
}
  input[type=text]:focus {
  border: 3px solid #2294ed;
}
input[type=email] {
  padding: 8px 20px;
  margin: 8px 0;
  box-sizing: border-box;
  border: 1px solid #ccc;
  border-radius: 10px;
  -webkit-transition: 0.5s;
  transition: 0.2s;
  outline: none;
}
  input[type=email]:focus {
  border: 3px solid #2294ed;
}
input[type=password] {
  padding: 8px 20px;
  margin: 8px 0;
  box-sizing: border-box;
  border: 1px solid #ccc;
  border-radius: 10px;
  -webkit-transition: 0.5s;
  transition: 0.3s;
  outline: none;
}
  input[type=password]:focus {
  border: 3px solid #2294ed;
}
.primary-button {
    color: white !important;
    font-weight: 700;
    background-color: #2294ed;
    border-radius: 6px;
    border: none;
    padding: 8px 24px;
    box-shadow: 0 0 2px var #577592;
    cursor: pointer;
}
.primary-button:hover {
    background-color: #1d69a3;
    transition: 0.2s ease-out;
}
</style>
<div class="container">
<center>
 <div style="background-color: #4fb3d4;">
  <a href="#"><img src="https://assets-global.website-files.com/5af97a9c84ec1bc79d81b5f4/5dc9062fc19d430f6909ced7_UHLogo_standard.png" width="250px" height="50px" alt="logo with company's name">
  </a>
 </div>
  <br>
  <form action="" method="post" enctype="multipart/form-data">
    <input type="text" name="name" placeholder="Enter Name" required>
    <br>
    <input type="email" name="email" placeholder="Enter Email" required>
    <br>
    <input type="text" name="mno" placeholder="Enter Mobile" required>
    <br><br>
    <div style="position: absolute;">
    <div style="position: relative; left: 360px;">
    <input type="file" name="image" required></div></div>
    <br><br>
    <input type="password" name="password" placeholder="Enter Password" required>
    <br><br>
    <input class="primary-button" type="submit" value="Create Account">
</form>
</center>
</div>
