<% include('../layouts/header.ejs') %>
<style>
  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }
  input[type=email] {
  padding: 8px 20px;
  margin: 8px 0;
  box-sizing: border-box;
  border: 1px solid #ccc;
  border-radius: 10px;
  -webkit-transition: 0.5s;
  transition: 0.2s;
  outline: none;
}
  input[type=email]:focus {
  border: 3px solid #2294ed;
}
input[type=password] {
  padding: 8px 20px;
  margin: 8px 0;
  box-sizing: border-box;
  border: 1px solid #ccc;
  border-radius: 10px;
  -webkit-transition: 0.5s;
  transition: 0.3s;
  outline: none;
}
  input[type=password]:focus {
  border: 3px solid #2294ed;
}
.primary-button {
    color: white !important;
    font-weight: 700;
    background-color: #2294ed;
    border-radius: 6px; border: none;
    padding: 8px 24px;
    box-shadow: 0 0 2px var #577592;
    cursor: pointer;
}
.primary-button:hover {
    background-color: #1d69a3;
    transition: 0.2s ease-out;
}
</style>
<center>
  <div style="background-color: #4fb3d4;">
  <a href="#"><img src="https://assets-global.website-files.com/5af97a9c84ec1bc79d81b5f4/5dc9062fc19d430f6909ced7_UHLogo_standard.png" width="250px" height="50px" alt="logo with company's name">
  </a>
  </div>
  <br><br>
  <form action="/login" method="post">
    <input type="email" name="email" required placeholder="Enter email">
    <br>
    <input type="password" name="password" required placeholder="Enter password">
    <br>
    <% 
      if(typeof message !== 'undefined'){
        %>
        <h4><%= message %></h4>
        <%
      }
    %>
    <br>
    <input type="checkbox" id="rem" name="rem" value="Remember me">
    <label for="rem">Remember me</label>
    <br><br>
    <input class="primary-button" type="submit" value="Login">
    <br><br>
    <a style="font-size: 12px" href="/forget">forget password</a>
</form>
</center>
